{% extends 'partials/base.html.twig' %}

{% block content %}
	{% include 'partials/page-header.html.twig' %}
	<section class="section is-medium" id='featured-section'>
		<div class='container'>
			<div class='columns is-multiline' id='featured-items'>
				<ul class='featured-items columns'>
					{% for item in page.header.events %}
						<li class='column'>
							<div class='card featured-item'>
								<header class='card-header'>
									<p class='featured-item-title card-header-title'>{{item.title}}</p>
								</header>
								<div class='card-content'>
									<div class='content featured-item-content'>
										{{item.description}}
									</div>
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</section>
{% endblock %}
